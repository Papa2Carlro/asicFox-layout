{% macro faqItem(title, bodyTitle , text) %}
    <li class="faq__question">
        <div class="faq__question-title">
            <p>{{ title }}</p>

            <img src="/assets/img/faq/caret.svg" alt="">
        </div>

        <div class="faq__question-body">
            <p>
                <b>{{ bodyTitle }}</b>

                <span>{{ text }}</span>
            </p>
        </div>
    </li>
{% endmacro %}

{% macro cart(product, class) %}
    <li class="cart {{ class }}">
        <img class="cart__image" src="{{ product.image }}" alt="">

        <div class="cart__info">
            <a href="" class="cart__info-title">{{ product.name }}</a>

            <div class="cart__info-rate rate">
                <div class="rate__body">
                    <div class="rate__star active"></div>
                    <div class="rate__star active"></div>
                    <div class="rate__star active"></div>
                    <div class="rate__star active"></div>
                    <div class="rate__star"></div>
                </div>

                <div class="rate__comment">4</div>
            </div>

            <div class="cart__info-price">
                <p>{{ product.price }}</p>
                {% if product.oldPrice %}
                    <b class="oldPrice">{{ product.oldPrice }}</b>
                {% endif %}
            </div>

            <ul class="cart__info-list">
                <li class="cart__info-value">
                    Алгоритм: {{ product.options.algoritm }}
                </li>

                <li class="cart__info-value">
                    Хеш: {{ product.options.hash }}th/s
                </li>

                <li class="cart__info-value">
                    Потребление: {{ product.options.bt }}
                </li>
            </ul>
        </div>

        {{ btnBuy('cart__action btn--cart') }}

        {% if product.hit %}
            <div class="cart__mark">хит</div>
        {% endif %}
    </li>
{% endmacro %}

{% macro breadcrumbs(breadcrumbs) %}
    <ul class="breadcrumbs">
        {% for breadcrumb in breadcrumbs %}
            {% if loop.last %}
                <li class="breadcrumbs-item disabled">
                    {{ breadcrumb.label }}
                </li>
            {% else %}
                <li class="breadcrumbs-item">
                    <a href="">{{ breadcrumb.label }}</a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endmacro %}